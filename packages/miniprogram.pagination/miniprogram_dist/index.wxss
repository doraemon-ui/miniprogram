@import '../../@doraemon-ui/style/var.wxss';

@import '../../@doraemon-ui/style/color.wxss';

.dora-pagination {
  display: block;
  width: 100%;
  height: 96rpx;
  overflow: hidden;
  box-sizing: border-box;
  position: relative
}
.dora-pagination__prev {
  position: absolute;
  left: 20rpx;
  top: 0
}
.dora-pagination__next {
  position: absolute;
  right: 20rpx;
  top: 0
}
.dora-pagination__number {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  margin: 0 auto;
  text-align: center
}
.dora-pagination__active {
  display: inline;
  color: var(--dora-color-positive,#3880ff);
  color: var(--dora-color-positive,#3880ff)
}
.dora-pagination__pointer {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  margin: 0 auto;
  text-align: center
}
.dora-pagination__dot {
  width: 16rpx;
  height: 16rpx;
  display: inline-block;
  margin: 0 6rpx;
  border-radius: 50%;
  background: var(--dora-color-step-20,#ccc);
  background: var(--dora-color-step-20,#ccc)
}
.dora-pagination__dot--active {
  background: var(--dora-color-step-45,#8c8c8c);
  background: var(--dora-color-step-45,#8c8c8c)
}
.dora-pagination__button {
  display: inline-block;
  margin: 0
}