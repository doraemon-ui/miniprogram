@import '../../@doraemon-ui/style/var.wxss';

@import '../../@doraemon-ui/style/color.wxss';

.dora-backdrop {
  --z-index: var(--dora-backdrop-z-index, var(--dora-component-z-index, 1000));
  --background-color: var(--dora-backdrop-background-color, rgba(0, 0, 0, 0.4));
  position: fixed;
  z-index: var(--z-index);
  z-index: var(--z-index);
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background-color: var(--background-color);
  background-color: var(--background-color)
}
.dora-backdrop--transparent {
  --background-color: transparent
}
.dora-backdrop__bd {
  z-index: 1
}
.dora-backdrop__aria-button {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
  width: 100%;
  height: 100%;
  pointer-events: none
}