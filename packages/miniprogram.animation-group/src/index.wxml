<view
  class="dora-class dora-class-a dora-class-b dora-class-c {{ wrapCls }} {{ animateCss }}"
  bindtap="onClick"
  catchtouchmove="{{ disableScroll ? 'onTouchMove' : '' }}"
  bindtransitionend="{{ type === 'transition' ? 'onTransitionEnd' : '' }}"
  bindanimationend="{{ type === 'animation' ? 'onAnimationEnd' : '' }}"
  style="{{ containerStyle }}"
  wx:if="{{ show }}"
>
  <slot></slot>
</view>