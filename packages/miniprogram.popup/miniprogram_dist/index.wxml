<view class="dora-class {{ classes.wrap }}" style="{{ containerStyle }}">
  <dora-backdrop
    id="dora-backdrop"
    wx:if="{{ mask }}"
    bind:click="onMaskClick"
    transparent="{{ maskTransparent }}"
    wrapStyle="{{ maskStyle }}"
    zIndex="{{ zIndex }}"
  />
  <dora-animation-group
    dora-class="{{ classes.body }}"
    in="{{ popupVisible }}"
    classNames="{{ transitionName }}"
    mountOnEnter="{{ mountOnEnter }}"
    unmountOnExit="{{ unmountOnExit }}"
    wrapStyle="{{ wrapStyle }}"
    bind:enter="onShow"
    bind:entered="onShowed"
    bind:exited="onClosed"
  >
    <slot />
    <dora-safe-area
      safeArea="{{ safeArea }}"
      wx:if="{{ (safeArea === true || safeArea === 'bottom' || safeArea && safeArea.bottom) && position === 'bottom' }}"
    />
  </dora-animation-group>
</view>
