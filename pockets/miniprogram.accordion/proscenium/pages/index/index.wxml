<view class="page" data-dora-theme="auto">
  <view class="page__hd">
    <view class="page__title">Accordion</view>
    <view class="page__desc">手风琴</view>
  </view>
  <view class="page__bd">
    <dora-accordion title="Default" defaultCurrent="{{ ['0', '1'] }}">
      <dora-accordion-panel title="Accordion 1" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel title="Accordion 2" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel title="Accordion 3" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
    </dora-accordion>
    <dora-accordion title="Thumb">
      <dora-accordion-panel thumb="http://cdn.skyvow.cn/logo.png" title="Accordion 1" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel thumb="http://cdn.skyvow.cn/logo.png" title="Accordion 2" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel thumb="http://cdn.skyvow.cn/logo.png" title="Accordion 3" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
    </dora-accordion>
    <dora-accordion title="Disabled">
      <dora-accordion-panel disabled title="Accordion 1" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel disabled title="Accordion 2" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel disabled title="Accordion 3" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
    </dora-accordion>
    <dora-accordion title="Custom key" default-current="{{ ['key2'] }}">
      <dora-accordion-panel key="key1" title="Accordion 1" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel key="key2" title="Accordion 2" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel key="key3" title="Accordion 3" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
    </dora-accordion>
    <dora-accordion title="Accordion = true" label="Accordion model" accordion default-current="{{ ['0'] }}">
      <dora-accordion-panel title="Accordion 1">微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp</dora-accordion-panel>
      <dora-accordion-panel title="Accordion 2">微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp</dora-accordion-panel>
      <dora-accordion-panel title="Accordion 3">微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp</dora-accordion-panel>
    </dora-accordion>
    <dora-accordion title="Controlled" controlled current="{{ current }}" bind:change="onChange">
      <dora-accordion-panel title="Accordion 1" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel title="Accordion 2" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
      <dora-accordion-panel title="Accordion 3" content="微信小程序自定义组件 https://github.com/wux-weapp/wux-weapp"></dora-accordion-panel>
    </dora-accordion>
  </view>
</view>