{
  "granularPathspec": false,
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "demos/*",
    "packages/*",
    "playground/**"
  ],
  "command": {
    "publish": {
      "verifyAccess": false,
      "verifyRegistry": false,
      "allowBranch": [
        "master"
      ]
    }
  },
  "ignoreChanges": [
    "playground/**",
    "**/package-lock.json",
    "**/*.md",
    "**/.*",
    "**/.*/**",
    "**/*.spec.ts",
    "**/*.spec.js",
    "**/*.tgz",
    "jest.config.js",
    "**/dist/**",
    "**/demo/**",
    "**/miniprogram_dist/**",
    "**/playground/**"
  ],
  "version": "independent"
}
